{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["./*"],
      "@/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@icons.tsx": ["./src/components/icons.tsx"],
      "@icons/*": ["./src/icons/*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@styles/*": ["./src/styles/*"]
    }
  }
}
