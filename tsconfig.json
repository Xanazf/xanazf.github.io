{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "paths": {
      "@*": ["./*"],
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@config/*": ["./src/config/*"],
      "@icons.tsx": ["./src/components/icons.tsx"],
      "@icons/*": ["./src/icons/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@public/*": ["./public/*"],
      "@styles/*": ["./src/styles/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "verbatimModuleSyntax": true
  },
  "extends": "astro/tsconfigs/strict"
}
