---
import Head from "@config/Head.astro";
import Header from "@components/sections/header/Header.astro";
import "@styles/global.css";

interface Props {
  title: string;
  description: string;
  image?: string;
}
const { title, description } = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <Head description={description} title={title} />
  </head>
  <body class="baselayout">
    <div class="viewport">
      <!-- <Header/> -->
      <div class="hr-neon"/>
      <main class="content">
        <slot />
      </main>
    </div>
  </body>
</html>
